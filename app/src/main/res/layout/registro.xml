<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Por favor ingrese sus datos"
        android:paddingTop="40dp"
        android:textSize="20dp"
        android:paddingLeft="20dp"
        />

    <EditText
        android:id="@+id/et_Rut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtRegistro"
        android:hint="Rut"
        android:textSize="20dp"
        android:paddingTop="70dp"
        android:layout_marginHorizontal="30dp"
        />

    <EditText
        android:id="@+id/et_Nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_Rut"
        android:layout_marginHorizontal="30dp"
        android:hint="Nombre"
        android:paddingTop="30dp"
        android:textSize="20dp" />
    <EditText
        android:id="@+id/et_ApellidoP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_Nombre"
        android:hint="Apellido Paterno"
        android:textSize="20dp"
        android:paddingTop="30dp"
        android:layout_marginHorizontal="30dp"
        />

    <EditText
        android:id="@+id/et_ApellidoA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_ApellidoP"
        android:layout_marginHorizontal="30dp"
        android:hint="Apellido Materno"
        android:paddingTop="40dp"
        android:textSize="20dp" />
    <RadioGroup
        android:id="@+id/RG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_ApellidoA"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingLeft="50dp">

        <RadioButton
            android:id="@+id/rbHombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hombre"
            android:textSize="20dp"
            />
        <RadioButton
            android:id="@+id/rbMujer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mujer"
            android:textSize="20dp"
            />
        <RadioButton
            android:id="@+id/rbOtro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Otros"
            android:textSize="20dp"
            />
    </RadioGroup>
    <EditText
        android:id="@+id/et_Telefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/RG"
        android:hint="TelÃ©fono"
        android:textSize="20dp"
        android:paddingTop="40dp"
        android:layout_marginHorizontal="30dp"
        />
    <EditText
        android:id="@+id/et_Direccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_Telefono"
        android:hint="Direccion"
        android:textSize="20dp"
        android:paddingTop="40dp"
        android:layout_marginHorizontal="30dp"
        />

    <EditText
        android:id="@+id/et_Correo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_Direccion"
        android:layout_marginHorizontal="30dp"
        android:hint="Correo"
        android:paddingTop="40dp"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnValidar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Validar"
        android:textSize="20dp"
        android:layout_marginHorizontal="30dp"
        />






</RelativeLayout>